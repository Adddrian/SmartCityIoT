<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.gortz.greeniot.smartcityiot2.fragments.settings.SettingsLocationsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fragment_frame_margin"
            android:gravity="center"
            android:text="Licenses"
            android:textSize="@dimen/main_topic_size"
            android:textStyle="italic" />

        <View
            android:id="@+id/view8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/divider_margin_top"
            android:background="@android:color/darker_gray" />

        <org.gortz.greeniot.smartcityiot2.view.NonScrollListView
            android:id="@+id/licenses"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/divider_margin_top"
            android:background="@android:color/darker_gray" />

    </LinearLayout>
</ScrollView>